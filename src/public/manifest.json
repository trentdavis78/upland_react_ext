{
  "name": "Upland Extension",
  "description": "Browser addon to help navigate the metaverse!",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Upland Extension",
    "default_icon": "icon.png"
  },
  "permissions": ["storage", "tabs", "webNavigation", "webRequest", "scripting"],

  "host_permissions": [
    "<all_urls>"
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["contentScript.js"],
    "run_at": "document_end",
    "css": ["styles/contentStyles.css"]
  }]
}